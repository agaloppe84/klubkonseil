


<div class="login-header">Inscription</div>

<div class="login-container">

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">

      <div class="login-label">Email</div>
      <%= f.input :email, required: false, autofill: false, label: false %>

      <div class="login-label">Mot de passe</div>
      <%= f.input :password, required: false, label: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>

      <div class="login-label">Confirmation du mot de passe</div>
      <%= f.input :password_confirmation, label: false %>

    </div>

    <div class="form-actions-center">
      <%= f.button :submit, "S'inscrire", class: "native-button" %>
    </div>
  <% end %>

  <div class="login-footer">
    <%= render "devise/shared/links" %>
  </div>

</div>
